<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<config xmlns="http://zanata.org/namespace/config/">
    <url>http://znt.motaword.com/</url>

    <project>mw-l10n</project>
    <project-version>master</project-version>
    <project-type>file</project-type>

    <!--
    I couldn't get rid of this "html" part during cron runs.
    It runs perfectly without it with MauticMotaWordBundle's `sync` command.
        - Oytun
    -->
    <src-dir>app/cache/l10n/en</src-dir>
    <trans-dir>app/cache/l10n</trans-dir>

    <rules>
        <rule pattern="**/*.html">{locale}/{path}/{filename}.html</rule>
        <rule pattern="**/*.json">{locale}/{path}/{filename}.json</rule>
    </rules>

    <includes>**/*.html,**/*.json</includes>
    <excludes>**/*.po,**/*.pot,**/*.md</excludes>
</config>
